{% extends "_layouts/auth.njk" %}

{% block body %}
  <form action="/signup" method="post" enctype="multipart/form-data">
    <label for="avatar">
      <img src="/images/avatar.svg" heigth="24" />
    </label>

    <input id="avatar" name="avatar" type="file" />

    <input type="text" name="name" placeholder="Your full name" />
    <input type="email" name="email" placeholder="Your e-mail" />
    <input type="password" name="password" placeholder="Your password" />

    <label for="provider">
      <input type="checkbox" id="provider" name="provider" value="1" />
      I am barber!
    </label>

    <button type="submit">Create account</button>
    <a hreavatarf="/">I have account</a>
  </form>

  <script type="text/javascript">
    var avatarInput = document.getElementById('avatar');
    var img = document.querySelector('label[for=avatar] img');

    avatarInput.onchange = function(e){
      img.classList.add('preview');
      img.scr = URL.createObjectURL(e.target.files[0]);
    }

  </script>

{% endblock %}
